generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model KPI {
  id          String   @id @default(uuid())
  name        String
  value       Float
  target      Float?
  unit        String?
  category    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("kpis")
}

model SalesAnalytics {
  id          String   @id @default(uuid())
  date        DateTime
  revenue     Float
  orders      Int
  avgOrderValue Float
  createdAt   DateTime @default(now())

  @@map("sales_analytics")
}
