# EisLager Production Environment Configuration Example

# Database Configuration
DATABASE_URL="postgresql://eislagger_user:eislagger_password_2024@postgres:5432/eislagger_main"

# JWT Configuration
JWT_SECRET="eislagger_super_secret_jwt_key_change_in_production_2024"
REFRESH_SECRET="eislagger_super_secret_refresh_key_change_in_production_2024"

# Node Environment
NODE_ENV="production"

# Service Ports
AUTH_PORT=3002
SALES_PORT=3004
INVENTORY_PORT=3003
ADMIN_PORT=3001
COMMUNICATIONS_PORT=3005
ANALYTICS_PORT=3006
FRONTEND_PORT=3000

# Kafka Configuration
KAFKA_BROKERS="kafka:29092"

# Redis Configuration
REDIS_URL="redis://redis:6379"

# Email Configuration (Gmail SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="eislagger@gmail.com"
SMTP_PASS="your_app_specific_password"
SMTP_FROM="eislagger@gmail.com"

# Domain Configuration
DOMAIN="your-domain.com"
FRONTEND_URL="http://your-domain.com"
API_URL="http://your-domain.com/api"

# Security Configuration
CORS_ORIGIN="http://your-domain.com"
PASSWORD_MIN_LENGTH=8

# Logging Configuration
LOG_LEVEL="info"

# File Upload Configuration
MAX_FILE_SIZE="50MB"
UPLOAD_PATH="/app/uploads"

# Rate Limiting
RATE_LIMIT_WINDOW="15m"
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
CACHE_TTL=3600

# Analytics Configuration
METRICS_COLLECTION_INTERVAL=600000
REPORT_GENERATION_SCHEDULE="0 6 * * *"

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5

# Backup Configuration
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# Development vs Production flags
DEBUG=false
PAYPAL_SANDBOX=false

